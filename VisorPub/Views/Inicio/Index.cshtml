@{
    ViewBag.Title = "Inicio";
}

<style type="text/css">
    .bs-glyphicons li:hover {
        color: #fff;
        background-color: #563d7c;
    }

    /*.bs-glyphicons li {
        width: 20.5%;
        font-size: 20px;
    }*/

    .bs-glyphicons li {
        height: 280px;
        line-height: 1.4;
        text-align: center;
        background-color: #e8e8e8;
        display: inline-block;
        border: 1px solid #fff;
    }

    span.glyphicon {
        margin-top: 60px;
    }

    .bs-glyphicons-list {
        list-style: none;
        padding-left: 33px;
        /*display:inline-flex;*/
    }

    .bs-glyphicons .glyphicon-class {
        display: block;
        text-align: center;
        word-wrap: break-word;
    }

    /*.bs-glyphicons .glyphicon {
        margin-bottom: 10px;
        font-size: 97px;
    }*/
</style>

<!-- Portfolio Item Heading -->
<div class="row">
    <div class="col-lg-12" align="center">
        <h1 class="page-header">Elija una opción</h1>
    </div>
</div>
<!-- /.row -->
<!-- Portfolio Item Row -->
<div class="row">
    <div class="col-md-12">
        <div class="bs-glyphicons" align="center">
            <ul class="bs-glyphicons-list">
                <li id="repAvance" role="button">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    <span class="glyphicon-class">REGISTRAR AVANCES</span>
                </li>
                <li id="reporte" role="button">
                    <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                    <span class="glyphicon-class">REPORTES</span>

                </li>
            </ul>
        </div>
    </div>
</div>


<script type="text/javascript">


    $("#reporte").click(function () {
        location.href = "@Url.Action("Index", "Reporte")";
        //location.href = "/repsistd/Reporte/Index";
    });

    $("#repAvance").click(function () {
        location.href = "@Url.Action("RegistrarAvance", "Inicio")";
        //location.href = "/repsistd/Inicio/RegistrarAvance";
    });

</script>