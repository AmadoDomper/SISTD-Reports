@{
    ViewBag.Title = "Registrar Avance";
}

<link type="text/css" rel="stylesheet" href="~/Public/css/jsgrid.css" />
<link type="text/css" rel="stylesheet" href="~/Public/css/jsgrid-theme.css" />

<script type="text/javascript" src="~/Public/js/jsgrid.js"></script>

<!-- Portfolio Item Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Registrar avance</h1>
    </div>
</div>
<!-- /.row -->
<!-- Portfolio Item Row -->
<div class="row">
    <div class="col-lg-12">
        <form id="frm" data-smk-icon="glyphicon-asterisk">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Plan Operativo</label>
                        <select class="form-control" id="ddlplan" name="ddlplan" required></select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Meta</label>
                        <select class="form-control" id="ddlMeta" name="ddlMeta" required></select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>Periodo</label>
                        <select class="form-control" id="ddlPeriodo" name="ddlPeriodo" required>
                            <option value="1">I Semestre</option>
                            <option value="2" selected="selected">III Trimestre</option>
                            <option value="3">IV Trimestre</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input type="button" class="btn btn-primary btn-block btn-fill" value="Buscar" id="btbuscar" name="btbuscar" style="margin-top: 25px;">
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <button id="btnExportar" style="margin-top: 25px;" type="button" class="btn btn-success">
                            <span class="glyphicon glyphicon glyphicon-save-file" aria-hidden="true"></span> Exportar
                        </button>
                        @*<input type="button" class="btn btn-success btn-block btn-fill" value="Exportar" id="btnExportar" style="margin-top: 25px;">*@
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4>Resultados - Eficacia hasta el periodo evaluado del <span id="nEficacia">0</span> % - Avance físico anual del <span id="nEfiFisica">0</span> % </h4>
                    <div id="jsGrid"></div>
                </div>
            </div>
        </form>
    </div>
</div>

<!--Pagina controlador de vista-->
<script src="~/Public/js/content/publicacion/RegistrarAvance.js"></script>