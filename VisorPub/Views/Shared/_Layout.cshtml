<!DOCTYPE html>
@using ESql;
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title | Monitoreo POI - SISTD</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Public/css/bootstrap.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Public/css/main.css" rel="stylesheet">

</head>
@{
    Usuario oUsuario = new Usuario();
    oUsuario = (Usuario)Session["Datos"];
}
<body>
    <!--js archivos-->
    <!-- jQuery -->
    <script src="~/Public/js/jquery.js"></script>

    <!--Personal Utils-->
    <script src="~/Public/js/utils.js"></script>
    <script src="~/Public/js/conexion-1.0.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Public/js/bootstrap.js"></script>

    <!--fin js archivos-->

    <script type="text/javascript">
        //pasamos el modelo a javascript
        var Model = @Html.Raw(Json.Encode(@Model));
    </script>


    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">

                <a class="navbar-brand" rel="home" href="#" title="Buy Sell Rent Everyting">
                    <img style="max-width: 100px; height: 40px; margin-top: -7px;"
                         src="~/Public/img/logo.png">
                </a>

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Inicio")">Monitoreo POI - SISTD</a>
            </div>



            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle " data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Reportes <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class=" dropdown">
                                <a href="@Url.Action("Reporte-Eficacia-ActProgra-CatePresu", "Reporte")">Reporte de Eficacia por Actividad Programática y Categoría Presupuestal</a>
                            </li>
                            <li><a href="@Url.Action("Reporte-Eficacia-Meta", "Reporte")">Reporte de  Eficacia por Meta</a></li>
                            <li class=" dropdown">
                                <a href="@Url.Action("Reporte-Avance-Fisico-Anual-CatePresu", "Reporte")">Reporte de Avance Físico Anual por Actividad Programática y Categoría Presupuestal</a>
                            </li>
                            <li><a href="@Url.Action("Reporte-Avance-Fisico-Anual-Meta", "Reporte")">Reporte de  Avance Físico Anual por Meta</a></li>
                            <li><a href="@Url.Action("Reporte-Logros-Actividad-Operativa", "Reporte")">Reporte de Logros por Actividades Operativas</a></li>
                            <li><a href="@Url.Action("Reporte-Desempeño-Individual", "Reporte")" >Reporte de Desempeño Individual</a></li>
                            <li><a href="@Url.Action("Reporte-AE-AO", "Reporte")">Reporte Acción Estratégica y Actividad Operativa</a></li>
                            
                        </ul>
                    </li>
                </ul>


                <ul class="nav navbar-nav pull-right">

                    @if (oUsuario == null)
                    {
                        <li class="">
                            <a href="@Url.Action("Login", "Login")">Iniciar Sesión</a>
                        </li>
                    }
                    else
                    {
                        <li class="">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><strong>@oUsuario.UserName</strong></a>
                        </li>
                        <li class="">
                                <a href="@Url.Action("CerrarSession", "Login")">Salir</a>
                        </li>
                    }
                </ul>


            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div class="container">
        @RenderBody()
        <hr>
        <!-- Footer -->
        @*<footer>
                <div class="row">
                    <div class="col-lg-12">
                        <p>Instituto de Investigaciones de la Amazonía Peruana</p>
                    </div>
                </div>
            </footer>*@
    </div>
    <!-- /.container -->
</body>
</html>
