@{
    ViewBag.Title = "Reporte de desempeño individual";
}

<link type="text/css" rel="stylesheet" href="~/Public/css/jsgrid.css" />
<link type="text/css" rel="stylesheet" href="~/Public/css/jsgrid-theme.css" />

<script type="text/javascript" src="~/Public/js/jsgrid.js"></script>

<style type="text/css">

input.form-control.azul {
    background-color: blue;
    color: white;
    font-weight: bold;
}

input.form-control.verde {
    background-color: green;
    color: white;
    font-weight: bold;
}

input.form-control.amarillo {
    background-color: yellow;
    color: black;
    font-weight: bold;
}

input.form-control.rojo {
    background-color: red;
    color: white;
    font-weight: bold;
}
</style>


<div class="row">
    <div class="col-md-10 col-lg-10">
        <h2 class="page-header">Reporte de desempeño individual</h2>
    </div>
    <div class="col-md-1">
        <button type="button" id="btnCopyUrl" class="btn btn-default btn-lg m-b-10" style="margin-top: 35px;">
            <span class="glyphicon glyphicon-copy" aria-hidden="true"></span> Copiar Url
        </button>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <form id="frm" data-smk-icon="glyphicon-asterisk">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label> Jefe de U.O/Programa </label>
                        <select class="form-control" id="ddlJefe" name="ddlJefe" required></select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label> Colaborador de U.O./Programa </label>
                        <select class="form-control" id="ddlEquipo" name="ddlEquipo" required></select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Plan Operativo</label>
                        <select class="form-control" id="ddlplan" name="ddlplan" required></select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>Periodo</label>
                        <select class="form-control" id="ddlPeriodo" name="ddlPeriodo" required></select>
                    </div>
                </div>

                @*<div class="col-md-1">
                        <div class="form-group">
                            <input type="button" class="btn btn-primary btn-block btn-fill" value="Buscar" id="btbuscar" name="btbuscar" style="margin-top: 25px;">
                        </div>
                    </div>*@
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="jsGrid"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 ">
                    <h4 class="text-center"><u>Eficacia hasta el Periodo</u></h4>
                    <div class="form-horizontal">
                        <div class="form-group m-b-5">
                            <label class="col-md-5 control-label">Desempeño Individual</label>
                            <div class="col-md-2">
                                <input type="text" id="txtEficInd" class="form-control" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group m-b-5">
                            <label class="col-md-5 control-label">Desempeño de su U.O</label>
                            <div class="col-md-2">
                                <input type="text" id="txtEficUO" class="form-control" disabled="disabled">
                            </div>
                        </div><div class="form-group m-b-5">
                            <label class="col-md-5 control-label">Desempeño Institucional</label>
                            <div class="col-md-2">
                                <input type="text" id="txtEfiInst" class="form-control" disabled="disabled">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <h4 class="text-center"><u>Avance Físico Anual</u></h4>
                    <div class="form-horizontal">
                        <div class="form-group m-b-5">
                            <label class="col-md-5 control-label">Desempeño Individual</label>
                            <div class="col-md-2">
                                <input type="text" id="txtAvanInd" class="form-control" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group m-b-5">
                            <label class="col-md-5 control-label">Desempeño de su U.O</label>
                            <div class="col-md-2">
                                <input type="text" id="txtAvanUO" class="form-control" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group m-b-5">
                            <label class="col-md-5 control-label">Desempeño Institucional</label>
                            <div class="col-md-2">
                                <input type="text" id="txtAvanInst" class="form-control" disabled="disabled">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@Html.Hidden("listaJefe", Url.Action("ListarJefe", "Reporte"))
@Html.Hidden("listaColabora", Url.Action("ListarColaboradores", "Reporte"))
@Html.Hidden("listaDeseInd", Url.Action("ReporteDesempIndividual", "Reporte"))
@Html.Hidden("datosInd", Url.Action("OptenerDesemIndividualValores", "Reporte"))
@Html.Hidden("listarCombosxPlanOperativoId", Url.Action("ListarCombosDesemIndixPlanOperativoId", "Reporte"))


<!--Pagina controlador de vista-->
<script src="~/Public/js/content/publicacion/ReporteDesempIndividual.js"></script>